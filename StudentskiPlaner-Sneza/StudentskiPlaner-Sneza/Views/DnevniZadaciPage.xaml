<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="StudentskiPlanerSneza.Views.DnevniZadaciPage"
              Title="Dnevni zadaci">





    <StackLayout Padding="10">
        <Label Text="Moji dnevni zadaci" FontSize="Large" FontAttributes="Bold" TextColor="#C2185B" HorizontalOptions="Center" Margin="10"/>
        <Button Text="Dodaj novi zadatak" Clicked="OnAddTaskClicked" BackgroundColor="#E91E63" TextColor="White" CornerRadius="10" Margin="0,0,0,10"/>



        <CollectionView x:Name="zadaciListView"
                 SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BackgroundColor="Silver" CornerRadius="12" HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding Naziv}" FontSize="Medium" FontAttributes="Bold" TextColor="#D81B60" />
                            <Label Text="{Binding Opis}" FontSize="Small" TextColor="Black"/>
                            <Label Text="{Binding Datum, StringFormat='📅 {0:dd.MM.yyyy}'}" FontSize="Small" TextColor="Red" />
                            <Label Text="{Binding Prioritet, StringFormat='🎯 {0}'}" FontSize="Small" TextColor="Red"/>

                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">

                                <Label Text="Završeno:" VerticalOptions="Center"/>
                                <CheckBox IsChecked="{Binding Zavrsen, Mode=TwoWay}" />
                                <Button Text="Izmeni" Clicked="OnEditTaskClicked" />
                                <Button Text="Obriši" Clicked="OnDeleteTaskClicked" HorizontalOptions="End" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>